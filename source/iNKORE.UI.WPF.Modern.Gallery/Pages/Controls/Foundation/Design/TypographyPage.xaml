<ui:Page
    x:Class="iNKORE.UI.WPF.Modern.Gallery.Pages.Controls.Foundation.TypographyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:iNKORE.UI.WPF.Modern.Gallery"
    xmlns:uc="clr-namespace:iNKORE.UI.WPF.Modern.Gallery.Controls.UserControls"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="compactPage"
    mc:Ignorable="d">

    <ui:ScrollViewerEx>
        <StackPanel>
            <TextBlock Margin="0,0,0,0" TextWrapping="Wrap" FontSize="{DynamicResource {x:Static ui:ThemeKeys.BodyTextBlockFontSizeKey}}">
                Typography helps provide structure and hierarchy to UI. The default font for Windows is 
                <Hyperlink NavigateUri="https://learn.microsoft.com/windows/apps/design/downloads/#fonts"
                        RequestNavigate="Hyperlink_RequestNavigate">
                    Segoe UI Variable
                </Hyperlink>.
                Best practice is to use Regular weight for most text, use Semibold for titles. The minimum values should be 12px Regular, 14px Semibold.
            </TextBlock>

            <StackPanel Margin="0">
                <local:ControlExample x:Name="Example1" HeaderText="Type ramp">
                    <local:ControlExample.Example>
                        <StackPanel HorizontalAlignment="Stretch" Orientation="Vertical">
                            <ui:ScrollViewerEx 
                                Height="450"
                                HorizontalScrollBarVisibility="Auto"
                                VerticalScrollBarVisibility="Hidden">
                                <Canvas
                                    Width="750"
                                    Height="450"
                                    HorizontalAlignment="Left">
                                    <Image
                                        x:Name="TypographyHeaderImage"
                                        Height="450"
                                        Canvas.ZIndex="0"
                                        Source="pack://application:,,,/iNKORE.UI.WPF.Modern.Gallery;component/Assets/Design/Typography.dark.png" />
                                    <!-- Caption Button with Flyout -->
                                    <Button x:Name="ShowTypographyButton1"
                                        Canvas.Left="650"
                                        Canvas.Top="60"
                                        Padding="4"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        AutomationProperties.Name="Show typography"
                                        Canvas.ZIndex="1"
                                        ToolTip="Caption">
                                        <ui:FontIcon FontSize="16" Icon="{x:Static ui:SegoeFluentIcons.Info}" />
                                        <ui:FlyoutService.Flyout>
                                            <ui:Flyout x:Name="CaptionFlyout" Placement="Top">
                                                <StackPanel>
                                                    <TextBlock Margin="0,0,0,8" Style="{DynamicResource BaseTextBlockStyle}" TextAlignment="Center" Text="Caption" FontWeight="Bold" />
                                                </StackPanel>
                                            </ui:Flyout>
                                        </ui:FlyoutService.Flyout>
                                    </Button>
                                    <!-- TeachingTip commented out - not available yet
                                    <TeachingTip
                                        x:Name="ShowTypographyInfoTooltip1"
                                        Title="Caption"
                                        Target="{x:Bind ShowTypographyButton1}" />
                                    -->

                                    <!-- Body Button with Flyout -->
                                    <Button x:Name="ShowTypographyButton2"
                                        Canvas.Left="190"
                                        Canvas.Top="280"
                                        Padding="4"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        AutomationProperties.Name="Show typography"
                                        Canvas.ZIndex="1"
                                        ToolTip="Body">
                                        <ui:FontIcon FontSize="16" Icon="{x:Static ui:SegoeFluentIcons.Info}" />
                                        <ui:FlyoutService.Flyout>
                                            <ui:Flyout x:Name="BodyFlyout" Placement="Top">
                                                <StackPanel>
                                                    <TextBlock Margin="0,0,0,8" Style="{DynamicResource BaseTextBlockStyle}" TextAlignment="Center" Text="Body" FontWeight="Bold" />
                                                </StackPanel>
                                            </ui:Flyout>
                                        </ui:FlyoutService.Flyout>
                                    </Button>
                                    <!-- TeachingTip commented out - not available yet
                                    <TeachingTip
                                        x:Name="ShowTypographyInfoTooltip2"
                                        Title="Body"
                                        Target="{x:Bind ShowTypographyButton2}" />
                                    -->

                                    <!-- Body Strong Button with Flyout -->
                                    <Button x:Name="ShowTypographyButton3"
                                        Canvas.Left="83"
                                        Canvas.Top="245"
                                        Padding="4"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        AutomationProperties.Name="Show typography"
                                        Canvas.ZIndex="1"
                                        ToolTip="Body Strong">
                                        <ui:FontIcon FontSize="16" Icon="{x:Static ui:SegoeFluentIcons.Info}" />
                                        <ui:FlyoutService.Flyout>
                                            <ui:Flyout x:Name="BodyStrongFlyout" Placement="Top">
                                                <StackPanel>
                                                    <TextBlock Margin="0,0,0,8" Style="{DynamicResource BaseTextBlockStyle}" TextAlignment="Center" Text="Body Strong" FontWeight="Bold" />
                                                </StackPanel>
                                            </ui:Flyout>
                                        </ui:FlyoutService.Flyout>
                                    </Button>
                                    <!-- TeachingTip commented out - not available yet
                                    <TeachingTip
                                        x:Name="ShowTypographyInfoTooltip3"
                                        Title="Body Strong"
                                        Target="{x:Bind ShowTypographyButton3}" />
                                    -->

                                    <!-- Title Button with Flyout -->
                                    <Button x:Name="ShowTypographyButton4"
                                        Canvas.Left="320"
                                        Canvas.Top="20"
                                        Padding="4"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        AutomationProperties.Name="Show typography"
                                        Canvas.ZIndex="1"
                                        ToolTip="Title">
                                        <ui:FontIcon FontSize="16" Icon="{x:Static ui:SegoeFluentIcons.Info}" />
                                        <ui:FlyoutService.Flyout>
                                            <ui:Flyout x:Name="TitleFlyout" Placement="Top">
                                                <StackPanel>
                                                    <TextBlock Margin="0,0,0,8" Style="{DynamicResource BaseTextBlockStyle}" TextAlignment="Center" Text="Title" FontWeight="Bold" />
                                                </StackPanel>
                                            </ui:Flyout>
                                        </ui:FlyoutService.Flyout>
                                    </Button>
                                    <!-- TeachingTip commented out - not available yet
                                    <TeachingTip
                                        x:Name="ShowTypographyInfoTooltip4"
                                        Title="Title"
                                        Target="{x:Bind ShowTypographyButton4}" />
                                    -->

                                    <!-- Display Button with Flyout -->
                                    <Button x:Name="ShowTypographyButton5"
                                        Canvas.Left="160"
                                        Canvas.Top="110"
                                        Padding="4"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        AutomationProperties.Name="Show typography"
                                        Canvas.ZIndex="1"
                                        ToolTip="Display">
                                        <ui:FontIcon FontSize="16" Icon="{x:Static ui:SegoeFluentIcons.Info}" />
                                        <ui:FlyoutService.Flyout>
                                            <ui:Flyout x:Name="DisplayFlyout" Placement="Top">
                                                <StackPanel>
                                                    <TextBlock Margin="0,0,0,8" Style="{DynamicResource BaseTextBlockStyle}" TextAlignment="Center" Text="Display" FontWeight="Bold" />
                                                </StackPanel>
                                            </ui:Flyout>
                                        </ui:FlyoutService.Flyout>
                                    </Button>
                                    <!-- TeachingTip commented out - not available yet
                                    <TeachingTip
                                        x:Name="ShowTypographyInfoTooltip5"
                                        Title="Display"
                                        Target="{x:Bind ShowTypographyButton5}" />
                                    -->
                                </Canvas>
                            </ui:ScrollViewerEx>

                            <!-- Typography Table -->
                            <ui:ScrollViewerEx HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden">
                        <StackPanel>
                            <Grid Margin="0,48,0,24" HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="272" />
                                    <ColumnDefinition Width="136" />
                                    <ColumnDefinition Width="112" />
                                    <ColumnDefinition Width="180" />
                                    <ColumnDefinition Width="540" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="16,0,0,0"
                                    Style="{DynamicResource CaptionTextBlockStyle}"
                                    Foreground="{DynamicResource {x:Static ui:ThemeKeys.TextFillColorSecondaryBrushKey}}"
                                    Text="Example" />
                                <TextBlock
                                    Grid.Column="1"
                                    Style="{DynamicResource CaptionTextBlockStyle}"
                                    Foreground="{DynamicResource {x:Static ui:ThemeKeys.TextFillColorSecondaryBrushKey}}"
                                    Text="Variable Font" />
                                <TextBlock
                                    Grid.Column="2"
                                    Style="{DynamicResource CaptionTextBlockStyle}"
                                    Foreground="{DynamicResource {x:Static ui:ThemeKeys.TextFillColorSecondaryBrushKey}}"
                                    Text="Size/Line height" />
                                <TextBlock
                                    Grid.Column="3"
                                    Style="{DynamicResource CaptionTextBlockStyle}"
                                    Foreground="{DynamicResource {x:Static ui:ThemeKeys.TextFillColorSecondaryBrushKey}}"
                                    Text="Style" />
                                <TextBlock
                                    Grid.Column="4"
                                    Style="{DynamicResource CaptionTextBlockStyle}"
                                    Foreground="{DynamicResource {x:Static ui:ThemeKeys.TextFillColorSecondaryBrushKey}}"
                                    Text="Usage (XAML)" FontWeight="SemiBold" />
                            </Grid>

                            <uc:TypographyControl
                                HorizontalAlignment="Stretch"
                                Background="{DynamicResource {x:Static ui:ThemeKeys.CardBackgroundFillColorDefaultBrushKey}}"
                                Example="Caption"
                                ExampleStyle="{DynamicResource CaptionTextBlockStyle}"
                                VariableFont="Small, Regular"
                                SizeLineHeight="12/16 epx"
                                ResourceName="CaptionTextBlockStyle"
                                Weight="400" />

                            <uc:TypographyControl
                                Example="Body"
                                ExampleStyle="{DynamicResource BodyTextBlockStyle}"
                                VariableFont="Text, Regular"
                                SizeLineHeight="14/20 epx"
                                ResourceName="BodyTextBlockStyle"
                                Weight="400" />

                            <uc:TypographyControl
                                Background="{DynamicResource {x:Static ui:ThemeKeys.CardBackgroundFillColorDefaultBrushKey}}"
                                Example="Body Strong"
                                ExampleStyle="{DynamicResource BodyStrongTextBlockStyle}"
                                VariableFont="Text, SemiBold"
                                SizeLineHeight="14/20 epx"
                                ResourceName="BodyStrongTextBlockStyle"
                                Weight="600" />

                            <uc:TypographyControl
                                Example="Subtitle"
                                ExampleStyle="{DynamicResource SubtitleTextBlockStyle}"
                                VariableFont="Display, SemiBold"
                                SizeLineHeight="20/28 epx"
                                ResourceName="SubtitleTextBlockStyle"
                                Weight="600" />

                            <uc:TypographyControl
                                Background="{DynamicResource {x:Static ui:ThemeKeys.CardBackgroundFillColorDefaultBrushKey}}"
                                Example="Title"
                                ExampleStyle="{DynamicResource TitleTextBlockStyle}"
                                VariableFont="Display, SemiBold"
                                SizeLineHeight="28/36 epx"
                                ResourceName="TitleTextBlockStyle"
                                Weight="600" />

                            <uc:TypographyControl
                                Example="Title Large"
                                ExampleStyle="{DynamicResource TitleLargeTextBlockStyle}"
                                VariableFont="Display, SemiBold"
                                SizeLineHeight="40/52 epx"
                                ResourceName="TitleLargeTextBlockStyle"
                                Weight="600" />

                            <uc:TypographyControl
                                Background="{DynamicResource {x:Static ui:ThemeKeys.CardBackgroundFillColorDefaultBrushKey}}"
                                Example="Display"
                                ExampleStyle="{DynamicResource DisplayTextBlockStyle}"
                                VariableFont="Display, SemiBold"
                                SizeLineHeight="68/92 epx"
                                ResourceName="DisplayTextBlockStyle"
                                Weight="600" />
                        </StackPanel>
                            </ui:ScrollViewerEx>
                        </StackPanel>
                    </local:ControlExample.Example>
                </local:ControlExample>
            </StackPanel>
        </StackPanel>
    </ui:ScrollViewerEx>
</ui:Page>
