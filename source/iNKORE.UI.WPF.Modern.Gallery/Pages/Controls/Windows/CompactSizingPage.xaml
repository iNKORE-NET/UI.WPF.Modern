<ui:Page
    x:Class="iNKORE.UI.WPF.Modern.Gallery.Pages.Controls.Windows.CompactSizingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:iNKORE.UI.WPF.Modern.Gallery"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="Compact Sizing"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock TextWrapping="Wrap" Margin="0,24,0,0">
            <Run FontWeight="SemiBold" Text="Controls that support compact styling:" />
            <LineBreak />
            <Run Text="• ListView" />
            <LineBreak />
            <Run Text="• TextBox" />
            <LineBreak />
            <Run Text="• PasswordBox" />
            <LineBreak />
            <Run Text="• AutoSuggestBox" />
            <LineBreak />
            <Run Text="• ComboBox" />
            <LineBreak />
            <Run Text="• DatePicker" />
            <LineBreak />
            <Run Text="• TimePicker" />
            <LineBreak />
            <Run Text="• TreeView" />
            <LineBreak />
            <Run Text="• NavigationView" />
            <LineBreak />
            <Run Text="• MenuBar" />
        </TextBlock>
        <local:ControlExample
            x:Name="Example1"
            HeaderText="Compact Sizing for controls"
            Loaded="Example1_Loaded">
            <local:ControlExample.Example>
                <ui:Frame x:Name="ContentFrame" />
            </local:ControlExample.Example>

            <local:ControlExample.Options>
                <ui:RadioButtons Header="Fluent Standard and Compact Sizing">
                    <RadioButton
                        x:Name="StandardSize"
                        Checked="Standard_Checked"
                        Content="Standard"
                        GroupName="ControlSize"
                        IsChecked="True" />
                    <RadioButton
                        x:Name="CompactSize"
                        Checked="Compact_Checked"
                        Content="Compact"
                        GroupName="ControlSize" />
                </ui:RadioButtons>
            </local:ControlExample.Options>
        </local:ControlExample>
    </StackPanel>
</ui:Page>
