<ui:Page
    x:Class="iNKORE.UI.WPF.Modern.Gallery.Pages.Controls.Windows.GridPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:iNKORE.UI.WPF.Modern.Gallery"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="Grid"
    d:DesignWidth="800"
    Loaded="Page_Loaded"
    mc:Ignorable="d">
    <StackPanel>
        <local:ControlExample x:Name="Example1" HeaderText="A 3x3 Grid control.">
            <Grid
                x:Name="Control1"
                HorizontalAlignment="Left"
                Width="240"
                Height="160"
                Background="Gray">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Rectangle
                    x:Name="Rectangle1"
                    Grid.Row="{Binding Value, ElementName=RowSlider, Mode=OneWay}"
                    Grid.Column="{Binding Value, ElementName=ColumnSlider, Mode=OneWay}"
                    Fill="Red" />
                <Rectangle x:Name="Rectangle2" Grid.Row="1" Fill="Blue" />
                <Rectangle x:Name="Rectangle3" Grid.Column="1" Fill="Green" />
                <Rectangle
                    x:Name="Rectangle4"
                    Grid.Row="1"
                    Grid.Column="1"
                    Fill="Yellow" />
            </Grid>

            <local:ControlExample.Options>
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Grid" />

                    <Slider
                        x:Name="ColumnSpacingSlider"
                        Grid.Column="0"
                        Grid.Row="1"
                        Margin="0,12,0,0"
                        Width="100"
                        ui:ControlHelper.Header="ColumnSpacing"
                        IsSnapToTickEnabled="True"
                        Maximum="16"
                        Minimum="0"
                        TickFrequency="1"
                        Value="8"
                        ValueChanged="ColumnSpacingSlider_ValueChanged" />

                    <Slider
                        x:Name="RowSpacingSlider"
                        Grid.Column="1"
                        Grid.Row="1"
                        Margin="12,12,0,0"
                        Height="110"
                        VerticalAlignment="Top"
                        IsDirectionReversed="True"
                        IsSnapToTickEnabled="True"
                        Maximum="16"
                        Minimum="0"
                        Orientation="Vertical"
                        TickFrequency="1"
                        Value="8"
                        ValueChanged="RowSpacingSlider_ValueChanged">
                        <ui:ControlHelper.Header>
                            <TextBlock Margin="0,0,0,10" Text="RowSpacing" />
                        </ui:ControlHelper.Header>
                    </Slider>

                    <TextBlock Grid.Column="0" Grid.Row="2" Margin="0,12,0,0" Text="Red block" />

                    <Slider
                        x:Name="ColumnSlider"
                        Grid.Column="0"
                        Grid.Row="3"
                        Margin="0,12,0,0"
                        Width="100"
                        ui:ControlHelper.Header="Grid.Column"
                        IsSnapToTickEnabled="True"
                        Maximum="2"
                        Minimum="0"
                        TickFrequency="1"
                        ValueChanged="ColumnSlider_ValueChanged" />

                    <Slider
                        x:Name="RowSlider"
                        Grid.Column="1"
                        Grid.Row="3"
                        Margin="12,12,0,0"
                        Height="110"
                        VerticalAlignment="Top"
                        IsDirectionReversed="True"
                        IsSnapToTickEnabled="True"
                        Maximum="2"
                        Minimum="0"
                        Orientation="Vertical"
                        TickFrequency="1"
                        ValueChanged="RowSlider_ValueChanged">
                        <ui:ControlHelper.Header>
                            <TextBlock Margin="0,0,0,10" Text="Grid.Row" />
                        </ui:ControlHelper.Header>
                    </Slider>
                </Grid>
            </local:ControlExample.Options>
        </local:ControlExample>
    </StackPanel>
</ui:Page>
